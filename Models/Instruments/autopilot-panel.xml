                <product>
                    <floor>
                        <div>
                            <log10>
                                <max>
                                    <abs>
                                        <property>/it-autoflight/settings/vertical-speed-fpm</property>
                                    </abs>
                                    <value>1</value>
                                </max>
                            </log10>
                            <value>
                                3
                            </value>
                        </div>
                    </floor>
                    <value>-0.0065</value>
                </product>
                <value>0.0065</value>
            </sum>
        </expression>

        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

