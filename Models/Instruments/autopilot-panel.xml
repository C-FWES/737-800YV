        <condition>
          <and>
            <equals>
              <property>/it-autoflight/settings/apvertmode</property>
              <value>1</value>
            </equals>
            <not>
              <less-than>
                  <property>/it-autoflight/settings/vertical-speed-fpm</property>
                  <value>0</value>
              </less-than>
            </not>
          </and>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>VS.4</object-name>
        <condition>
            <and>
                <equals>
                   <property>/it-autoflight/settings/apvertmode</property>
              <value>1</value>
                </equals>
                <greater-than>
                    <property>/it-autoflight/settings/vertical-speed-fpm</property>
                    <value>999</value>
                </greater-than>
            </and>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>VS.4neg</object-name>
        <condition>
            <and>
                <equals>
                    <property>/it-autoflight/settings/apvertmode</property>
              <value>1</value>
                </equals>
                <less-than>
                    <property>/it-autoflight/settings/vertical-speed-fpm</property>
                    <value>-999</value>
                </less-than>
            </and>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>VS.5</object-name>
        <expression>
            <sum>
                <product>
                    <floor>
                        <div>
                            <log10>
                                <max>
                                    <property>/it-autoflight/settings/vertical-speed-fpm</property>
                                    <value>1</value>
                                </max>
                            </log10>
                            <value>
                                3
                            </value>
                        </div>
                    </floor>
                    <value>-0.0065</value>
                </product>
                <value>0.0065</value>
            </sum>
        </expression>

        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
