<?xml version="1.0"?>
<PropertyList>
    <path>pedestal.ac</path>
    <animation>
        <type>select</type>
        <object-name>EICAS2</object-name>
        <condition>
            <property>sim/current-view/internal</property>
        </condition>
    </animation>

    <model>
        <name>EICAS2</name>
        <path>Models/Instruments/EICAS/eicas.xml</path>
        <offsets>
            <x-m>0.426</x-m>
            <y-m>-0.021</y-m>
            <z-m>0.738</z-m>
            <pitch-deg>299.5</pitch-deg>
        </offsets>
    </model>
    <model>
        <name>CDU1</name>
        <path>Aircraft/Instruments-3d/cdu2/boeing.xml</path>
        <offsets>
            <x-m>0.460</x-m>
            <y-m>-0.203</y-m>
            <z-m>0.725</z-m>
            <pitch-deg>299.5</pitch-deg>
        </offsets>
        <overlay>
            <texture>boeing_grey.png</texture>
        </overlay>
    </model>

    <model>
        <name>CDU2</name>
        <path>Aircraft/Instruments-3d/cdu2/boeing.xml</path>
        <offsets>
            <x-m>0.460</x-m>
            <y-m>0.162</y-m>
            <z-m>0.725</z-m>
            <pitch-deg>299.5</pitch-deg>
        </offsets>
        <overlay>
            <texture>boeing_grey.png</texture>
        </overlay>
    </model>
	
	
<!-- left / middle changes the knob by .1 -->
<animation>
  <type>pick</type>
  <object-name>AFDSbrt</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>controls/lighting/AFDSbrt</property>
      <step>0.1</step>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>AFDSbrt</object-name>
  <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>controls/lighting/AFDSbrt</property>
      <step>-0.1</step>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
    </binding>
  </action>
</animation>

<!-- scroll wheel changes the knob by .1 -->
<animation>
  <type>pick</type>
  <object-name>AFDSbrt</object-name>
  <action>
    <button>3</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>controls/lighting/AFDSbrt</property>
      <step>0.1</step>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>AFDSbrt</object-name>
  <action>
    <button>4</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>controls/lighting/AFDSbrt</property>
      <step>-0.1</step>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
    </binding>
  </action>
</animation>

</PropertyList>
